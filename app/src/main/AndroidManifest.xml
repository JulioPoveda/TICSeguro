<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.japg.ticseguro">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:name=".view.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.MainMenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.PhishingActivity"
            android:label="@string/title_activity_phishing"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.AprendeMasPhishingActivity"
            android:label="@string/title_activity_aprende_mas_phishing"
            android:parentActivityName=".view.PhishingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.PhishingActivity" />
        </activity>
        <activity
            android:name=".view.PruebaTusConocimientosPhishingActivity"
            android:label="@string/title_activity_prueba_tus_conocimientos_phishing"
            android:parentActivityName=".view.PhishingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.PhishingActivity" />
        </activity>
        <activity
            android:name=".view.RedesSocialesActivity"
            android:label="@string/title_activity_social_networks"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.AprendeMasRedesSocialesActivity"
            android:label="@string/title_activity_aprende_mas_redes_sociales"
            android:parentActivityName=".view.RedesSocialesActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.RedesSocialesActivity" />
        </activity>
        <activity
            android:name=".view.PruebaTusConocimientosRedesSocialesActivity"
            android:label="@string/title_activity_prueba_tus_conocimientos_redes_sociales"
            android:parentActivityName=".view.RedesSocialesActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.RedesSocialesActivity" />
        </activity>
        <activity
            android:name=".view.InternetActivity"
            android:label="@string/title_activity_internet"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.AprendeMasInternetActivity"
            android:label="@string/title_activity_aprende_mas_internet"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.InternetActivity" />
        </activity>
        <activity
            android:name=".view.PruebaTusConocimientosInternetActivity"
            android:label="@string/title_activity_prueba_tus_conocimientos_internet"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.InternetActivity" />
        </activity>
        <activity
            android:name=".view.ContrasenasActivity"
            android:label="@string/title_activity_contrasenas"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.AprendeMasContrasenasActivity"
            android:label="@string/title_activity_aprende_mas_contrasenas"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ContrasenasActivity" />
        </activity>
        <activity
            android:name=".view.PruebaTusConocimientosContrasenasActivity"
            android:label="@string/title_activity_prueba_tus_conocimientos_contrasenas"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ContrasenasActivity" />
        </activity>

        <receiver
            android:name=".view.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>